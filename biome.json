{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useConst": "warn",
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noStaticElementInteractions": "off",
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["src/**/*.tsx", "src/**/*.css", "src/**/*.json", "app"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	}
}
